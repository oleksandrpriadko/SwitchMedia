<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/colorItemDetailsBack"
    android:clickable="true"
    android:paddingTop="@dimen/margin_item_main">

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/margin_item_main"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_s_item_detail"
        tools:text="Item Name" />

    <ImageView
        android:id="@+id/imageView_poster"
        android:layout_width="@dimen/poster_width"
        android:layout_height="@dimen/poster_height"
        android:layout_below="@id/textView_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_item_main"
        android:contentDescription="@null"
        tools:src="@drawable/ic_error_outline_white_24dp" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView_poster"
        android:layout_centerHorizontal="true"
        android:text="@android:string/ok"
        android:textSize="@dimen/txt_s_section" />

</RelativeLayout>