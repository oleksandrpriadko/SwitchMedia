<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="@android:color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_s_section"
        android:layout_marginBottom="@dimen/margin_item_inner"
        android:id="@+id/textView_section"
        tools:text="Section Name" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recView_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_section" />
</RelativeLayout>